	<windowclass name="ps_domain_power">
		<margin>0,0,0,2</margin>
		<script>
			function onInit()
				update(false);

				if Session.IsHost then
					registerMenuItem(Interface.getString("power_menu_addaction"), "pointer", 3);
					registerMenuItem(Interface.getString("power_menu_addcast"), "radial_sword", 3, 2);
					registerMenuItem(Interface.getString("power_menu_addeffect"), "radial_effect", 3, 3);
				end
			end
			function update(bEditMode)
				idelete.setVisibility(bEditMode);
				name.setReadOnly(not bEditMode);
				desc.setReadOnly(not bEditMode)
			end
			function onMenuSelection(selection, subselection)
				if selection == 3 and subselection == 2 then
					createAction("cast");
				elseif selection == 3 and subselection == 3 then
					createAction("effect");
				end
			end
			function createAction(sType)
				local nodeAttack = getDatabaseNode();
				if nodeAttack then
					local nodeActions = DB.createChild(nodeAttack, "actions");
					if nodeActions then
						local nodeAction = DB.createChild(nodeActions);
						if nodeAction then
							DB.setValue(nodeAction, "type", "string", sType);
						end
					end
				end
			end
		</script>
		<sheetdata>
			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
